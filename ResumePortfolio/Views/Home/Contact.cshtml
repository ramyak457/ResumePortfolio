@{
    ViewBag.Title = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <style>
        body {
            background-color: black;
            font-family: Arial, Helvetica, sans-serif;
        }
        *{box-sizing:border-box;}
        .cont{
            border-radius: 5px;
            padding-left:100px;
            margin-right:300px;
            margin-left:100px;
            margin-top:20px;
        }
        input[type=text],textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
            display: block;
        }
        .modal {
            position: absolute; /* Stay in place */
            z-index: 1; /* Sit on top */
            width: 15%;
        }

        /* Modal Content/Box */
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;  /*15% from the top and centered */
            padding-left: 10px;
            border: 1px solid #888;
            /*width: 80%;*/ /* Could be more or less, depending on screen size */
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }     
    </style>
</head>
<body>
    <div class="cont">
        <form action="#">
            <label style="color:white">First Name<span style="color:red">*</span></label>
            <input type="text" name="firstname" placeholder="Your name..">

            <label style="color:white">Last Name<span style="color:red">*</span></label>
            <input type="text" name="lastname" placeholder="Your last name..">

            <label style="color:white">Email<span style="color:red">*</span></label>
            <input type="text" name="email" placeholder="xyz@gmail.com">

            <label style="color:white">Subject</label>
            <textarea name="subject" placeholder="Write something.." style="height:200px"></textarea>

            <button id="myBtn">Submit</button>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p>Message sent successfully..</p>
                </div>
            </div>
        </form>
    </div>
    <div style="position:absolute; top:180px; right:250px">
        <h1><span style="font-size:larger; color:white">CONTACT</span></h1>
    </div>
    <div style="position:absolute; top:250px; right:240px">
        <h1><span style="font-size:larger; color:white">ME</span></h1>
    </div>
    <div style="position:absolute; top:320px; right:250px">
        <span style="color: white; font-size:large">+1(604)203-9314   </span><img src="~/Images/Call.jpg" width="30px" height="30px" />
    </div>
    <div style="position:absolute; top:360px; right:250px">
        <span style="color: white; font-size:large">ramya04.kumar@gmail.com   </span><img src="~/Images/Mail.jpg" width="30px" height="30px" />
    </div>
    <script>
        var modal = document.getElementById("myModal");

        var btn = document.getElementById("myBtn");

        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function () {
            modal.style.display = "block";
        }

        span.onclick = function () {
            modal.style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</body>
</html>